<Window x:Class="GameStore.views.StoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameStore.views"
        mc:Ignorable="d"
        Title="StoreWindow" Height="450" Width="800" 
		ResizeMode="CanResize" WindowStyle="None">
	<Grid x:Name="maingrid1">
		<Grid.RowDefinitions>
			<RowDefinition Height="76"/>
			<RowDefinition Height="195*"/>
		</Grid.RowDefinitions>
		<Grid Grid.RowSpan="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="194*"/>
				<ColumnDefinition Width="552*"/>
			</Grid.ColumnDefinitions>
			<ScrollViewer Grid.Column = "1" Background="#29FFE3">
				<Grid x:Name="GamesGrid">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="20*"/>
						<ColumnDefinition Width="300*"/>
						<ColumnDefinition Width="60*"/>
						<ColumnDefinition Width="300*"/>
						<ColumnDefinition Width="20*"/>
					</Grid.ColumnDefinitions>
				</Grid>
			</ScrollViewer>
		</Grid>
	</Grid>
</Window>
